{% extends "layout.njk" %}

{% block content %}

        <head>
            <link rel="stylesheet" href="/styles.css">
        </head>

<form class="card" method="POST" action="/instructors">
    <section
        class="avatar"
        style="background-image: url(https://source.unsplash.com/collection/pzLbV-NFT40/500x500) no-repeat / cover"></section>
    <section class="details">
        

        <h3>Novo Instrutor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input
                    type="url"
                    name="avatar_url"
                    placeholder="http://"
                >
            </div>
        </div>


        <div class="item">
            <div>Instrutor</div>
            <div>
                <input
                    type="text"
                    name="name"
                    placeholder="Nome do Istrutor"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input
                    type="date"
                    name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                <span><input type="radio" name="gender" value="F" checked>Feminino</span>
            </div>
        </div>

        <div class="item">
            <div>Area de atuacao</div>
            <div>
                <input
                    type="text"
                    name="services"
                    placeholder="Separe os servicos pretados por virgula">
            </div>
        </div>

        <button type="submit">Salvar</button>

    </section>
</form>

{% endblock content %}